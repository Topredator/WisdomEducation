<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/common_dp_270"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_round_box_14dp_shape"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_22"
            android:layout_marginTop="@dimen/common_dp_19"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/common_dp_16"
            android:paddingRight="@dimen/common_dp_16"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_17_dp"
            android:textStyle="bold"
            tools:text="Share Screen" />

        <TextView
            android:id="@+id/message"
            android:layout_width="@dimen/common_dp_270"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_4"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/common_dp_16"
            android:paddingRight="@dimen/common_dp_16"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/ts_13_dp"
            android:visibility="gone"
            tools:text="Wisdom Education is capturing your screen."
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_0_5"
            android:layout_marginTop="@dimen/common_dp_19"
            android:background="@color/color_503f3f3f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/ts_17_dp"
                android:visibility="visible" />

            <View
                android:layout_width="@dimen/common_dp_0_5"
                android:layout_height="match_parent"
                android:background="@color/color_503f3f3f" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/color_337eff"
                android:textSize="@dimen/ts_17_dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>